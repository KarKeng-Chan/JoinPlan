@model IEnumerable<JoinPlan.Models.Activity>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th style="width:250px">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrganizerEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityDateTime)
        </th>
        <th>
            Participants
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="width:250px">
            <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
            <div>
                @Html.ActionLink("Edit", "Edit", new { id = item.ActivityID }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.ActivityID }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.ActivityID })
            </div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <div class="d-flex justify-content-center align-items-center" style="width:200px;height:120px;">
                <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" style="max-width:100%;max-height:100%" />
            </div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrganizerEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Participations.Count) / @Html.DisplayFor(modelItem => item.MaxParticipant)
        </td>
    </tr>
}

</table>
